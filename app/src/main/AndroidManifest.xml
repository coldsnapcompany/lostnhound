<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coldsnap.lostnhound">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <!-- MAIN and LAUNCHER to go back here eventually to allow app to remember log in -->
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".ChangeEmailActivity" />
        <activity android:name=".DeleteAccountActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".FoundActivity" />
        <activity android:name=".LostActivity"></activity>
    </application>

</manifest>